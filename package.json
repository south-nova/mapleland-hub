{
  "private": true,
  "name": "mapleland-hub",
  "description": "메이플랜드 종합 도구",
  "version": "0.1.0",
  "author": "SouthNova <southnova95@gmail.com>",
  "main": "app/background.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/south-nova/mapleland-hub"
  },
  "scripts": {
    "dev": "nextron",
    "build": "pnpm exec electron-builder",
    "lint": "eslint . --ext .ts && eslint renderer/ --ext .tsx",
    "postinstall": "electron-builder install-app-deps",
    "publish": "electron-builder -p always",
    "rebuild": "electron-rebuild -f -w better-sqlite3"
  },
  "build": {
    "appId": "com.southnova.mapleland-hub",
    "productName": "메랜허브",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "extraResources": [
      "./main/database/items.db"
    ],
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "메랜허브"
    }
  },
  "dependencies": {
    "@radix-ui/react-hover-card": "^1.1.6",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@tanstack/react-query": "^5.68.0",
    "better-sqlite3": "^11.9.0",
    "builder-util-runtime": "^9.2.10",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "electron-log": "^5.3.2",
    "electron-serve": "^1.3.0",
    "electron-updater": "^6.3.9",
    "es-hangul": "^2.3.2",
    "tailwind-merge": "^3.0.2",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@babel/runtime-corejs3": "^7.26.10",
    "@electron/rebuild": "^3.7.1",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.0.14",
    "@types/node": "^20.11.16",
    "@types/react": "^18.2.52",
    "autoprefixer": "^10.4.21",
    "electron": "^34.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9",
    "eslint-config-next": "15.2.2",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "next": "^14.2.4",
    "nextron": "^9.5.0",
    "postcss": "^8.5.3",
    "prebuild-install": "^7.1.3",
    "prettier": "^3.5.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^4.0.14",
    "typescript": "^5.7.3"
  }
}
